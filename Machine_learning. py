import chromadb

# Connect to ChromaDB (Persistent Storage)
chroma_client = chromadb.PersistentClient(path="./chroma_db")

# Get all collections
collections = chroma_client.list_collections()

# If no collections exist
if not collections:
    print("âŒ No collections found in ChromaDB.")
    exit()

print("ğŸ“‚ **Available Collections:**")
for collection in collections:
    print(f"- {collection.name}")

print("\nğŸ“œ **Full Schema Dump**")
print("=" * 50)

# Iterate over all collections
for collection in collections:
    print(f"\nğŸ” **Collection: {collection.name}**")
    print("-" * 50)

    # Load the collection
    col = chroma_client.get_collection(name=collection.name)

    # Fetch all data (Documents, Metadata, Embeddings)
    data = col.get(include=["documents", "metadatas", "embeddings"])

    # Print total records
    print(f"ğŸ“Š Total Records: {len(data['documents'])}")

    # Print schema from first record (as example)
    if len(data["documents"]) > 0:
        print("\nğŸ“ **Schema Example:**")
        print(f"ğŸ”¹ **Document Sample:** {data['documents'][0]}")
        print(f"ğŸ”¹ **Metadata Sample:** {data['metadatas'][0]}")
        print(f"ğŸ”¹ **Embedding Sample (First 5 values):** {data['embeddings'][0][:5]} ...")

    print("=" * 50)